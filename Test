    <script>
        // জাভাস্ক্রিপ্ট কোড শুরু
        // ডামি ডেটা (বইয়ের তথ্যের সাথে শুধু ফাইল আইডি)
        const featuredBooks = [
            { 
                id: 6, 
                title: "একাত্তর", 
                author: "শামসুর রাহমান", 
                rating: "★★★★★", 
                cover: "https://placehold.co/140x210/039be5/fff?text=বই+৬", 
                pdf: "1HId_fmwNt-eS1TKil0S9Nvug7tAc4G7A" 
            },
            { 
                id: 7, 
                title: "আকাশ ভরা তারা", 
                author: "আবুল হোসেন", 
                rating: "★★★★☆", 
                cover: "https://placehold.co/140x210/c0ca33/fff?text=বই+৭", 
                pdf: "1HId_fmwNt-eS1TKil0S9Nvug7tAc4G7A"
            },
            { 
                id: 8, 
                title: "জীবনের গল্প", 
                author: "তানজিলা রহমান", 
                rating: "★★★★☆", 
                cover: "https://placehold.co/140x210/f57c00/fff?text=বই+৮", 
                pdf: "1HId_fmwNt-eS1TKil0S9Nvug7tAc4G7A"
            },
            { 
                id: 9, 
                title: "নতুন দিগন্ত", 
                author: "আরিফ হোসেন", 
                rating: "★★★★★", 
                cover: "https://placehold.co/140x210/6d4c41/fff?text=বই+৯", 
                pdf: "1HId_fmwNt-eS1TKil0S9Nvug7tAc4G7A"
            },
            { 
                id: 10, 
                title: "আলোর খোঁজে", 
                author: "তাসনিম আক্তার", 
                rating: "★★★★☆", 
                cover: "https://placehold.co/140x210/8e24aa/fff?text=বই+১০", 
                pdf: "1HId_fmwNt-eS1TKil0S9Nvug7tAc4G7A"
            },
        ];

        // বই রেন্ডার করার ফাংশন
        function renderBooks(books, containerId) {
            const container = document.getElementById(containerId);
            if (!container) {
                console.error('Error: Container element with ID "' + containerId + '" not found.');
                return;
            }
            container.innerHTML = '';
            books.forEach(book => {
                const bookItem = document.createElement('div');
                bookItem.className = 'book-item';
                bookItem.innerHTML = `
                    <img src="${book.cover}" alt="${book.title} বইয়ের কভার">
                    <div class="book-title">${book.title}</div>
                    <div class="book-author">${book.author}</div>
                    <div class="book-rating">${book.rating}</div>
                `;
                bookItem.onclick = () => {
                    openPdfViewer(book.pdf, book.title);
                };
                container.appendChild(bookItem);
            });
        }
        
        // পিডিএফ ভিউয়ার খোলার ফাংশন
        function openPdfViewer(pdfFileId, bookTitle) {
            const modal = document.getElementById('pdfModal');
            const iframe = document.getElementById('pdfViewer');
            const modalTitle = document.getElementById('pdfModalTitle');

            modalTitle.textContent = bookTitle;
            
            // একটি নির্ভরযোগ্য Google Drive direct download URL তৈরি
            const drivePdfUrl = `https://drive.google.com/uc?export=download&id=${pdfFileId}`;
            
            // PDF.js ভিউয়ার ব্যবহার করে সরাসরি PDF ফাইল লোড করা
            // #toolbar=0&navpanes=0 যোগ করে ডাউনলোড বাটন এবং সাইডবার লুকানো হয়েছে
            const viewerUrl = `https://mozilla.github.io/pdf.js/web/viewer.html?file=${encodeURIComponent(drivePdfUrl)}#toolbar=0&navpanes=0`;
            iframe.src = viewerUrl;
            
            modal.style.display = 'flex';
        }

        // JavaScript for automatic image change
        document.addEventListener('DOMContentLoaded', () => {
            renderBooks(featuredBooks, 'featured-books');

            const slides = document.querySelectorAll('.carousel-item');
            let slideIndex = 0;

            function showSlides() {
                for (let i = 0; i < slides.length; i++) {
                    slides[i].classList.remove('active');
                }
                
                slideIndex++;
                
                if (slideIndex > slides.length) {
                    slideIndex = 1;
                }
                
                slides[slideIndex - 1].classList.add('active');
            }
            
            showSlides();

            setInterval(showSlides, 5000);

            // Event listeners to close the modal
            const modal = document.getElementById('pdfModal');
            const closeButton = document.querySelector('.close-button');

            closeButton.onclick = function() {
                modal.style.display = 'none';
                document.getElementById('pdfViewer').src = '';
            }

            window.onclick = function(event) {
                if (event.target == modal) {
                    modal.style.display = 'none';
                    document.getElementById('pdfViewer').src = '';
                }
            }
        });

        // স্ক্রিনশট এবং কিবোর্ড শর্টকাট বন্ধ করার জন্য অতিরিক্ত স্ক্রিপ্ট
        document.addEventListener('keydown', (e) => {
            // F12, Ctrl+Shift+I, Ctrl+Shift+C (Developer Tools)
            if (e.key === 'F12' || (e.ctrlKey && e.shiftKey && (e.key === 'I' || e.key === 'C'))) {
                e.preventDefault();
            }
            // Ctrl+S (Save Page)
            if (e.ctrlKey && e.key === 'S') {
                e.preventDefault();
            }
            // Ctrl+U (View Page Source)
            if (e.ctrlKey && e.key === 'U') {
                e.preventDefault();
            }
            // Print Screen
            if (e.key === 'PrintScreen') {
                e.preventDefault();
            }
        });
    </script>
</body>
